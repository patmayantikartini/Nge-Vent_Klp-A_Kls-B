<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar"
    android:paddingHorizontal="32dp"
    tools:context=".DaftarSukses"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pendaftaran Berhasil"
        android:textColor="@color/Orange"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_berhasil" />

    <TextView
        android:id="@+id/noReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_item_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="No Registrasi" />

    <TextView
        android:id="@+id/tvKet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harap Simpan No Registrasi Anda"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btnDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:backgroundTint="@color/Orange"
        android:layout_marginTop="50dp"/>

</LinearLayout>